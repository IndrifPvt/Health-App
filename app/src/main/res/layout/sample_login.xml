<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_15sdp"
        android:id="@+id/activity_bmi_layout"
        android:background="@color/colorPrimary"
        tools:context=".ui.activities.BMICalculator">

    <TextView
            android:id="@+id/tv_bmi_calculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bmi_calculator"
            android:textStyle="bold"
            android:textSize="@dimen/_25sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/tv_height_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_height"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi_calculator"
    />

    <Spinner
            android:id="@+id/spinner_height"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:popupBackground="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_height_measure"
            app:layout_constraintTop_toTopOf="@id/tv_height_measure"
            app:layout_constraintBottom_toBottomOf="@id/tv_height_measure"
    />
    <TextView
            android:id="@+id/tv_bmi_height"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/height"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_feets"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets"
    />

    <EditText
            android:id="@+id/et_height_feets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:hint="feet"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="@color/colorPrimaryDark"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/profile_editext"
            android:imeOptions="actionNext"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_height_measure"
            app:layout_constraintStart_toEndOf="@id/tv_bmi_height"
            app:layout_constraintEnd_toStartOf="@id/et_height_inchs"
    />

    <!--<TextView
            android:id="@+id/tv_feets"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/feet"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_feets"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets"
            app:layout_constraintStart_toEndOf="@id/et_height_feets"
    />-->

    <EditText
            android:id="@+id/et_height_inchs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/colorPrimaryDark"
            android:imeOptions="actionNext"
            android:hint="inch"
            android:paddingLeft="@dimen/_10sdp"
            android:textColorHint="@color/colorPrimaryDark"
            android:background="@drawable/profile_editext"
            android:layout_marginLeft="@dimen/_7sdp"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_height_measure"
            app:layout_constraintStart_toEndOf="@id/et_height_feets"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <!--<TextView
            android:id="@+id/tv_inchs"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/inch"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_feets"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets"
            app:layout_constraintStart_toEndOf="@id/et_height_inchs"
    />-->

    <!--Choose-->
    <TextView
            android:id="@+id/tv_height_met"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/height"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_met"
            app:layout_constraintBottom_toBottomOf="@id/et_height_met"
    />

    <EditText
            android:id="@+id/et_height_met"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:hint="met"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:imeOptions="actionNext"
            android:background="@drawable/profile_editext"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/et_height_feets"
            app:layout_constraintStart_toEndOf="@id/tv_height_met"
            app:layout_constraintEnd_toStartOf="@id/et_height_cm"
    />
