            android:id="@+id/tv_met"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/metre"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_met"
            app:layout_constraintBottom_toBottomOf="@id/et_height_met"
            app:layout_constraintStart_toEndOf="@id/et_height_met"
    />-->
    <EditText
            android:id="@+id/et_height_cm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/colorPrimaryDark"
            android:backgroundTint="@android:color/white"
            android:imeOptions="actionNext"
            android:hint="cm"
            android:textColorHint="@color/colorPrimaryDark"
            android:background="@drawable/profile_editext"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/et_height_inchs"
            app:layout_constraintStart_toEndOf="@id/et_height_met"
            app:layout_constraintEnd_toEndOf="parent"
    />

