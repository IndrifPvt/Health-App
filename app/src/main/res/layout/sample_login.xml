    <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/weight"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:paddingRight="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/et_weight_bmi"
            app:layout_constraintBottom_toBottomOf="@id/et_weight_bmi"
    />

    <EditText
            android:id="@+id/et_weight_bmi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/profile_editext"
            android:hint="weight"
            android:paddingLeft="@dimen/_6sdp"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/et_height_met"
            app:layout_constraintStart_toEndOf="@id/tv_weight"
            app:layout_constraintEnd_toStartOf="@id/spinner_bmi_weight"
    />

    <Spinner
            android:id="@+id/spinner_bmi_weight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:popupBackground="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_weight_bmi"
            app:layout_constraintBottom_toBottomOf="@id/et_weight_bmi"
    />

    <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:text="@string/result"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/et_weight_bmi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_bmi"
    />

    <TextView
            android:id="@+id/tv_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/et_weight_bmi"
            app:layout_constraintStart_toEndOf="@id/tv_result"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/tv_result_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:text="@string/previous"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_bmi"
    />

    <TextView
            android:id="@+id/tv_bmi_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi"
            app:layout_constraintStart_toEndOf="@id/tv_result_previous"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:id="@+id/btn_calculate_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate_bmi"
            android:textStyle="bold"
            android:onClick="onClick"
            android:background="@drawable/edittext"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi_previous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>