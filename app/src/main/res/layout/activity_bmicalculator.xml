<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_bmi_layout"
        android:background="@mipmap/background_main"
        tools:context=".ui.activities.BMICalculator">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_bmr"
                android:padding="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

        >


     <TextView
             android:id="@+id/tv_height_measure"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/choose_height"
             android:textSize="@dimen/_18sdp"
             android:textStyle="bold"
             android:layout_marginTop="@dimen/_50sdp"
             app:layout_constraintTop_toTopOf="parent"
     />

    <Spinner
            android:id="@+id/spinner_height"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:popupBackground="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_height_measure"
            app:layout_constraintTop_toTopOf="@id/tv_height_measure"
            app:layout_constraintBottom_toBottomOf="@id/tv_height_measure"
    />
    <TextView
            android:id="@+id/tv_bmi_height"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/height"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_feets"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets"
    />

    <EditText
            android:id="@+id/et_height_feets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:text="@string/zero"
            android:visibility="gone"
            android:textCursorDrawable="@null"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorWhite"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_height_measure"
            app:layout_constraintStart_toEndOf="@id/tv_bmi_height"
            app:layout_constraintEnd_toStartOf="@id/tv_feets"
    />

    <TextView
            android:id="@+id/tv_feets"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/feet"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_feets"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets"
            app:layout_constraintStart_toEndOf="@id/et_height_feets"
            app:layout_constraintEnd_toStartOf="@id/et_height_inchs"
    />

    <EditText
            android:id="@+id/et_height_inchs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/colorWhite"
            android:imeOptions="flagNoExtractUi"
            android:text="@string/zero"
            android:visibility="gone"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="@dimen/_7sdp"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_height_measure"
            app:layout_constraintStart_toEndOf="@id/tv_feets"
            app:layout_constraintEnd_toStartOf="@id/tv_inchs"
    />

    <TextView
            android:id="@+id/tv_inchs"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/inch"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/et_height_feets"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets"
            app:layout_constraintStart_toEndOf="@id/et_height_inchs"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <!--Choose-->
    <TextView
            android:id="@+id/tv_height_met"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/height"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_met"
            app:layout_constraintBottom_toBottomOf="@id/et_height_met"
    />

    <EditText
            android:id="@+id/et_height_met"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:text="@string/zero"
            android:textColor="@color/colorWhite"
            android:textCursorDrawable="@null"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginTop="@dimen/_20sdp"
            android:backgroundTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/et_height_feets"
            app:layout_constraintStart_toEndOf="@id/tv_height_met"
            app:layout_constraintEnd_toStartOf="@id/tv_met"
    />
    <TextView
            android:id="@+id/tv_met"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/metre"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_met"
            app:layout_constraintBottom_toBottomOf="@id/et_height_met"
            app:layout_constraintStart_toEndOf="@id/et_height_met"
            app:layout_constraintEnd_toStartOf="@id/et_height_cm"
    />
    <EditText
            android:id="@+id/et_height_cm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@android:color/white"
            android:imeOptions="flagNoExtractUi"
            android:text="@string/zero"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/et_height_inchs"
            app:layout_constraintStart_toEndOf="@id/tv_met"
            app:layout_constraintEnd_toStartOf="@id/tv_cm"
    />

    <TextView
            android:id="@+id/tv_cm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/centimetre"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_cm"
            app:layout_constraintBottom_toBottomOf="@id/et_height_cm"
            app:layout_constraintStart_toEndOf="@id/et_height_cm"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/weight"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/et_weight_bmi"
            app:layout_constraintBottom_toBottomOf="@id/et_weight_bmi"
    />

    <EditText
            android:id="@+id/et_weight_bmi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorWhite"
            android:textCursorDrawable="@null"
            android:text="@string/zero"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/et_height_met"
            app:layout_constraintStart_toEndOf="@id/tv_weight"
            app:layout_constraintEnd_toStartOf="@id/spinner_bmi_weight"
    />

    <Spinner
            android:id="@+id/spinner_bmi_weight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:popupBackground="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_weight_bmi"
            app:layout_constraintBottom_toBottomOf="@id/et_weight_bmi"
    />

    <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:text="@string/result"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/et_weight_bmi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_bmi"
    />

    <TextView
            android:id="@+id/tv_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/et_weight_bmi"
            app:layout_constraintStart_toEndOf="@id/tv_result"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/tv_result_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:text="@string/previous"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_bmi"
    />

    <TextView
            android:id="@+id/tv_bmi_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_22sdp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi"
            app:layout_constraintStart_toEndOf="@id/tv_result_previous"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:id="@+id/btn_calculate_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate_bmi"
            android:textStyle="bold"
            android:onClick="onClick"
            android:background="@drawable/edittext"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi_previous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>