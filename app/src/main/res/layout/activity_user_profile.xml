<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@mipmap/background_main"
        tools:context=".ui.activities.UserProfile" >
<ScrollView
        android:id="@+id/sv_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
>
    <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
    >


        <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_profile_image"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/ic_person_black_24dp"
                android:onClick="onClick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="@color/colorWhite"/>

        <ImageView
                android:id="@+id/iv_upload_image_button"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="onClick"
                android:src="@drawable/ic_photo_camera_black_24dp"
                app:layout_constraintTop_toTopOf="@id/iv_profile_image"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile_image"
                app:layout_constraintEnd_toEndOf="@id/iv_profile_image"
        />
       <!-- <android.support.design.widget.FloatingActionButton
                android:id="@+id/iv_upload_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:onClick="onClick"
                android:padding="@dimen/_3sdp"
                android:scaleType="center"
                android:src="@mipmap/camera"
                app:borderWidth="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_profile_image"
                app:layout_constraintStart_toEndOf="@id/iv_profile_image"
                app:layout_constraintTop_toTopOf="@+id/iv_profile_image"
                tools:ignore="OnClick" />-->

    <TextView
            android:id="@+id/tv_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="@id/iv_profile_image"
            app:layout_constraintEnd_toEndOf="@id/iv_profile_image"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_image"
    />


    <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingRight="@dimen/_20sdp"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="@id/et_userprofile__name"
            app:layout_constraintBottom_toBottomOf="@id/et_userprofile__name"
    />
    <EditText
            android:id="@+id/et_userprofile__name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:background="@drawable/profile_editext"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_photo"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/tv_userlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="@id/et_userprofile__location"
            app:layout_constraintBottom_toBottomOf="@id/et_userprofile__location"
    />
    <EditText
            android:id="@+id/et_userprofile__location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/location"
            android:background="@drawable/profile_editext"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/et_userprofile__name"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintEnd_toEndOf="parent"
    />
        <TextView
                android:id="@+id/tv_useremail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textStyle="bold"
                android:paddingBottom="@dimen/_8sdp"
                android:gravity="top"
                app:layout_constraintTop_toTopOf="@id/et_userprofile__email"
                app:layout_constraintBottom_toBottomOf="@id/et_userprofile__email"
               />
    <EditText
            android:id="@+id/et_userprofile__email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:background="@drawable/profile_editext"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:focusable="false"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/et_userprofile__location"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/tv_userphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="@id/et_userprofile__phone"
            app:layout_constraintBottom_toBottomOf="@id/et_userprofile__phone"
    />
    <EditText
            android:id="@+id/et_userprofile__phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/phone"
            android:background="@drawable/profile_editext"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/et_userprofile__email"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/tv_userage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="@id/et_userprofile__age"
            app:layout_constraintBottom_toBottomOf="@id/et_userprofile__age"
    />
    <EditText
            android:id="@+id/et_userprofile__age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_age"
            android:background="@drawable/profile_editext"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="2"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/et_userprofile__phone"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/tv_userheight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="@id/et_userprofile__heightfeet"
            app:layout_constraintBottom_toBottomOf="@id/et_userprofile__heightfeet"
    />
    <EditText
            android:id="@+id/et_userprofile__heightfeet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/feet"
            android:background="@drawable/profile_editext"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="2"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/et_userprofile__age"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintEnd_toStartOf="@id/et_userprofile__heightinch"
    />
    <EditText
            android:id="@+id/et_userprofile__heightinch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/inch"
            android:background="@drawable/profile_editext"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="2"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@id/et_userprofile__age"
            app:layout_constraintStart_toEndOf="@id/et_userprofile__heightfeet"
            app:layout_constraintEnd_toEndOf="parent"
    />



    <TextView
            android:id="@+id/tv_userweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="@id/et_userprofile__weight"
            app:layout_constraintBottom_toBottomOf="@id/et_userprofile__weight"
    />
    <EditText
            android:id="@+id/et_userprofile__weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_weight"
            android:background="@drawable/profile_editext"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="5"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toBottomOf="@id/et_userprofile__heightfeet"
            app:layout_constraintStart_toEndOf="@id/tv_username"
            app:layout_constraintEnd_toEndOf="parent"
    />
        <Button
                android:id="@+id/btn_update"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:onClick="onClick"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_userprofile__weight"
        />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>