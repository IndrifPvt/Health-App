<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.MainActivity">
    <ScrollView
            android:id="@+id/sv_dashboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_35sdp"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_bmr"
                android:padding="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

    <View
            android:id="@+id/iv_heart_rate"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@drawable/images"
            android:onClick="onClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_excersise"
            app:layout_constraintEnd_toStartOf="@id/iv_bmr"
    />
    <TextView
            android:id="@+id/tv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate"
            android:fontFamily="@font/roboto_bold"
            android:gravity="top"
            android:paddingTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/iv_heart_rate"
            app:layout_constraintStart_toStartOf="@id/iv_heart_rate"
            app:layout_constraintEnd_toEndOf="@id/iv_heart_rate"
    />
    <ImageView
            android:id="@+id/iv_pulse_count"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="0dp"
            android:src="@mipmap/hheart"
            app:layout_constraintTop_toBottomOf="@id/tv_heart"
            app:layout_constraintBottom_toTopOf="@id/tv_heart_beat"
            app:layout_constraintStart_toStartOf="@id/iv_heart_rate"

    />
    <TextView
            android:id="@+id/tv_heart_beat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_heart_rate"
            app:layout_constraintStart_toStartOf="@id/iv_heart_rate"
            app:layout_constraintEnd_toEndOf="@id/iv_heart_rate"
    />

    <View
            android:id="@+id/iv_bmr"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/images"
            android:layout_marginTop="@dimen/_50sdp"
            android:onClick="onClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_calorie"
            app:layout_constraintStart_toEndOf="@id/iv_heart_rate"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/tv_bmr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMR"
            android:fontFamily="@font/roboto_bold"
            android:gravity="top"
            android:paddingTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/iv_bmr"
            app:layout_constraintStart_toStartOf="@id/iv_bmr"
            app:layout_constraintEnd_toEndOf="@id/iv_bmr"
    />
    <ImageView
            android:id="@+id/iv_bmr_count"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="0dp"
            android:src="@mipmap/bmr"
            app:layout_constraintTop_toBottomOf="@id/tv_bmr"
            app:layout_constraintBottom_toTopOf="@id/tv_bmr_count"
            app:layout_constraintStart_toStartOf="@id/iv_bmr"

    />
    <TextView
            android:id="@+id/tv_bmr_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_bmr"
            app:layout_constraintStart_toStartOf="@id/iv_bmr"
            app:layout_constraintEnd_toEndOf="@id/iv_bmr"
    />
    <View
            android:id="@+id/iv_excersise"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/images"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/iv_heart_rate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_calorie"
            app:layout_constraintBottom_toTopOf="@id/iv_bmi"
    />
    <TextView
            android:id="@+id/tv_excersise_burn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excersise"
            android:fontFamily="@font/roboto_bold"
            android:gravity="top"
            android:paddingTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/iv_excersise"
            app:layout_constraintStart_toStartOf="@id/iv_excersise"
            app:layout_constraintEnd_toEndOf="@id/iv_excersise"
    />
    <ImageView
            android:id="@+id/iv_excersise_burn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="0dp"
            android:src="@mipmap/excersiseburn"
            app:layout_constraintTop_toBottomOf="@id/tv_excersise_burn"
            app:layout_constraintBottom_toTopOf="@id/tv_excersise"
            app:layout_constraintStart_toStartOf="@id/iv_excersise"

    />
    <TextView
            android:id="@+id/tv_excersise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_excersise"
            app:layout_constraintStart_toStartOf="@id/iv_excersise"
            app:layout_constraintEnd_toEndOf="@id/iv_excersise"
    />

    <View
            android:id="@+id/iv_calorie"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/images"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@id/iv_bmr"
            app:layout_constraintStart_toEndOf="@id/iv_excersise"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_step"
    />

    <TextView
            android:id="@+id/tv_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorie Need"
            android:fontFamily="@font/roboto_bold"
            android:gravity="top"
            android:paddingTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/iv_calorie"
            app:layout_constraintStart_toStartOf="@id/iv_calorie"
            app:layout_constraintEnd_toEndOf="@id/iv_calorie"
    />
    <ImageView
            android:id="@+id/iv_calorie_need"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="0dp"
            android:src="@mipmap/calorie"
            app:layout_constraintTop_toBottomOf="@id/tv_calorie"
            app:layout_constraintBottom_toTopOf="@id/tv_cal_need"
            app:layout_constraintStart_toStartOf="@id/iv_calorie"

    />
    <TextView
            android:id="@+id/tv_cal_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_calorie"
            app:layout_constraintStart_toStartOf="@id/iv_calorie"
            app:layout_constraintEnd_toEndOf="@id/iv_calorie"
    />

    <View
            android:id="@+id/iv_bmi"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/images"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_step"
            app:layout_constraintTop_toBottomOf="@id/iv_excersise"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:id="@+id/tv_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI"
            android:fontFamily="@font/roboto_bold"
            android:gravity="top"
            android:paddingTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/iv_bmi"
            app:layout_constraintStart_toStartOf="@id/iv_bmi"
            app:layout_constraintEnd_toEndOf="@id/iv_bmi"
    />
    <ImageView
            android:id="@+id/iv_bmi_count"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="0dp"
            android:src="@mipmap/bmi"
            app:layout_constraintTop_toBottomOf="@id/tv_bmi"
            app:layout_constraintBottom_toTopOf="@id/tv_bmi_count"
            app:layout_constraintStart_toStartOf="@id/iv_bmi"

    />
    <TextView
            android:id="@+id/tv_bmi_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_bmi"
            app:layout_constraintStart_toStartOf="@id/iv_bmi"
            app:layout_constraintEnd_toEndOf="@id/iv_bmi"
    />

    <View
            android:id="@+id/iv_step"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/images"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="onClick"
            app:layout_constraintTop_toBottomOf="@id/iv_calorie"
            app:layout_constraintStart_toEndOf="@id/iv_bmi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:fontFamily="@font/roboto_bold"
            android:gravity="top"
            android:paddingTop="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@id/iv_step"
            app:layout_constraintStart_toStartOf="@id/iv_step"
            app:layout_constraintEnd_toEndOf="@id/iv_step"
    />
    <ImageView
            android:id="@+id/iv_step_count"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="0dp"
            android:src="@mipmap/stepcounter"
            app:layout_constraintTop_toBottomOf="@id/tv_step"
            app:layout_constraintBottom_toTopOf="@id/tv_step_count"
            app:layout_constraintStart_toStartOf="@id/iv_step"

    />
    <TextView
            android:id="@+id/tv_step_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@id/iv_step"
            app:layout_constraintStart_toStartOf="@id/iv_step"
            app:layout_constraintEnd_toEndOf="@id/iv_step"
    />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>