<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background_main"
        tools:context=".ui.activities.CaloriesCounter">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_bmr"
                android:padding="@dimen/_13sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

        >

    <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <RadioGroup
            android:id="@+id/radioGroup_calorie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_gender"
    >

        <RadioButton
                android:id="@+id/rb_male_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:buttonTint="@color/your_color"
                android:textColor="@color/colorWhite"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:textSize="@dimen/_18sdp"
        />
        <RadioButton
                android:id="@+id/rb_female_calorie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:textColor="@color/colorWhite"
                android:buttonTint="@color/your_color"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:textSize="@dimen/_18sdp"/>
    </RadioGroup>

    <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/age"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_calorie"
            app:layout_constraintBottom_toBottomOf="@id/et_age_calorie"
    />

    <EditText
            android:id="@+id/et_age_calorie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:imeOptions="flagNoExtractUi"
            android:backgroundTint="@android:color/white"
            android:inputType="number"
            android:textColor="@color/colorWhite"
            android:textCursorDrawable="@null"
            app:layout_constraintStart_toEndOf="@id/tv_age"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_calorie"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/tv_height_measure_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_height"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/et_age_calorie"
    />
    <Spinner
            android:id="@+id/spinner_height_cal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:popupBackground="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_height_measure_cal"
            app:layout_constraintTop_toTopOf="@id/tv_height_measure_cal"
            app:layout_constraintBottom_toBottomOf="@id/tv_height_measure_cal"
    />
    <TextView
            android:id="@+id/tv_cal_height"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/height"
            android:visibility="gone"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_feets_cal"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets_cal"
    />

    <EditText
            android:id="@+id/et_height_feets_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:visibility="gone"
            android:textCursorDrawable="@null"
            android:text="@string/zero"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@android:color/white"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_height_measure_cal"
            app:layout_constraintStart_toEndOf="@id/tv_cal_height"
            app:layout_constraintEnd_toStartOf="@id/tv_feets_cal"
    />
    <TextView
            android:id="@+id/tv_feets_cal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/feet"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_feets_cal"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets_cal"
            app:layout_constraintStart_toEndOf="@id/et_height_feets_cal"
            app:layout_constraintEnd_toStartOf="@id/et_height_inchs_cal"
    />
    <EditText
            android:id="@+id/et_height_inchs_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/colorWhite"
            android:textCursorDrawable="@null"
            android:backgroundTint="@android:color/white"
            android:imeOptions="flagNoExtractUi"
            android:text="@string/zero"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_height_measure_cal"
            app:layout_constraintStart_toEndOf="@id/tv_feets_cal"
            app:layout_constraintEnd_toStartOf="@id/tv_inchs_cal"
    />
    <TextView
            android:id="@+id/tv_inchs_cal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/inch"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_feets_cal"
            app:layout_constraintBottom_toBottomOf="@id/et_height_feets_cal"
            app:layout_constraintStart_toEndOf="@id/et_height_inchs_cal"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <!--Choose-->


    <TextView
            android:id="@+id/tv_height_met_cal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/height"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_met_cal"
            app:layout_constraintBottom_toBottomOf="@id/et_height_met_cal"
    />

    <EditText
            android:id="@+id/et_height_met_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textCursorDrawable="@null"
            android:text="@string/zero"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorWhite"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/et_height_feets_cal"
            app:layout_constraintStart_toEndOf="@id/tv_height_met_cal"
            app:layout_constraintEnd_toStartOf="@id/tv_met_cal"
    />
    <TextView
            android:id="@+id/tv_met_cal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/metre"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_met_cal"
            app:layout_constraintBottom_toBottomOf="@id/et_height_met_cal"
            app:layout_constraintStart_toEndOf="@id/et_height_met_cal"
            app:layout_constraintEnd_toStartOf="@id/et_height_cm_cal"
    />
    <EditText
            android:id="@+id/et_height_cm_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/colorWhite"
            android:imeOptions="flagNoExtractUi"
            android:textCursorDrawable="@null"
            android:backgroundTint="@android:color/white"
            android:text="@string/zero"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/et_height_inchs_cal"
            app:layout_constraintStart_toEndOf="@id/tv_met_cal"
            app:layout_constraintEnd_toStartOf="@id/tv_cm_cal"
    />
    <TextView
            android:id="@+id/tv_cm_cal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/centimetre"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            app:layout_constraintTop_toTopOf="@id/et_height_cm_cal"
            app:layout_constraintBottom_toBottomOf="@id/et_height_cm_cal"
            app:layout_constraintStart_toEndOf="@id/et_height_cm_cal"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/tv_weight_cal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/weight"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toTopOf="@id/et_weight_cal"
            app:layout_constraintBottom_toBottomOf="@id/et_weight_cal"
    />

    <EditText
            android:id="@+id/et_weight_cal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="@color/colorWhite"
            android:textCursorDrawable="@null"
            android:text="@string/zero"
            android:imeOptions="flagNoExtractUi"
            android:backgroundTint="@android:color/white"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/et_height_met_cal"
            app:layout_constraintStart_toEndOf="@id/tv_weight_cal"
            app:layout_constraintEnd_toStartOf="@id/spinner_cal_weight"
    />
    <Spinner
            android:id="@+id/spinner_cal_weight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:popupBackground="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/et_weight_cal"
            app:layout_constraintBottom_toBottomOf="@id/et_weight_cal"
    />

    <Button
            android:id="@+id/btn_calculate_cal"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textStyle="bold"
            android:onClick="onClick"
            android:background="@drawable/edittext"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/et_weight_cal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <Button
            android:id="@+id/checklist"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="@string/checklist"
            android:textStyle="bold"
            android:onClick="onClick"
            android:background="@drawable/edittext"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/btn_calculate_cal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>